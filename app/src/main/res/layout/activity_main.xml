<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageViewDestinations"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_map_init" />

    <EditText
        android:id="@+id/editTextTextSearch"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/myrect"
        android:hint="Pesquise aqui"
        android:elevation="2dp"
        android:inputType="textPersonName"
        android:textSize="20sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.268"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.02" />

    <ImageView
        android:id="@+id/imageViewIconQrCode"
        android:layout_width="46dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="4dp"
        android:elevation="3dp"
        android:scaleType="centerCrop"
        app:layout_constraintRight_toRightOf="@id/editTextTextSearch"
        app:layout_constraintTop_toTopOf="@id/editTextTextSearch"
        app:srcCompat="@drawable/icon_qrcode" />

    <ListView
        android:id="@+id/listViewDestinationsFound"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:elevation="2dp"
        android:background="@drawable/myrect"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextSearch"
        app:layout_constraintVertical_bias="0.022" />

    <TextView
        android:id="@+id/textViewTitleRecents"
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="1dp"
        android:elevation="2dp"
        android:text="Recentes"
        android:background="@drawable/myrect"
        android:textAlignment="center"
        android:textColor="#2F1533"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/listViewDestinationsRecents"
        app:layout_constraintStart_toStartOf="parent" />

    <ListView
        android:id="@+id/listViewDestinationsRecents"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:elevation="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/myrect"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewDestinations"
        app:layout_constraintStart_toStartOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>